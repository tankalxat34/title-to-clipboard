{
    "manifest_version": 3,
    "name": "Title to Clipboard",
    "version": "1.0",
    "author": "tankalxat34",
    "description": "Copy the title of the current page to the clipboard.",
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite"
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icon16.png",
                "icon48.png",
                "icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "frontend.js"
            ]
        }
    ]
}